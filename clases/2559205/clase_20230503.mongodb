use('sample_airbnb')
db.listingsAndReviews.aggregate([
    {
      '$match': {
        'address.country': 'Australia', 
        'address.market': 'Sydney', 
        'address.suburb': {
          '$exists': true, 
          '$ne': ''
        }
      }
    }, {
      '$group': {
        '_id': '$address.suburb', 
        'precioPromedio': {
          '$avg': '$price'
        }
      }
    }, {
      '$sort': {
        'precioPromedio': 1
      }
    }, {
      '$limit': 10
    }
  ])















